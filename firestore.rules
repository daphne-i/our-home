rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Temporary: Allow all authenticated users to read/write user documents for debugging
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Also allow creation of user documents
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write documents in households they belong to
    match /households/{householdId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.memberIds;
    }
    
    // Users can read and write household-related collections if they're members
    match /households/{householdId}/{subcollection=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/households/$(householdId)).data.memberIds;
    }
    
    // Allow users to create new households
    match /households/{householdId} {
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.memberIds;
    }
  }
}